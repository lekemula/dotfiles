{
  "codeLens.enable": true,
  "solargraph.completion": true,
  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  "solargraph.logLevel": "debug",
  "workspace.rootPatterns": [
    ".git",
    ".hg",
    ".projections.json",
    "tsconfig.json",
    "project.json",
    "package.json"
  ],
  "html.format.templating": true,
  "html.filetypes": [
    "html",
    "eruby",
    "liquid",
    "handlebars",
    "htmldjango",
    "blade"
  ],
  "coc.preferences.formatOnType": true,
  "languageserver": {
    "ruby-lsp": {
      "command": "bundle",
      "args": ["exec", "ruby-lsp"],
      "initializationOptions": {
        "enabledFeatures": [
          "codeActions",
          "diagnostics",
          "documentHighlights",
          "documentLink",
          "documentSymbols",
          "foldingRanges",
          "formatting",
          "hover",
          "inlayHint",
          "selectionRanges"
        ],
        "formatter": "auto"
      },
      "filetypes": ["ruby"]
    },
    "sorbet": {
      "command": "bundle",
      "args": ["exec", "srb","typecheck", "--lsp"],
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "clangd": {
      "command": "clangd",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".clangd", "compile_commands.json", ".git/", ".hg/"],
      "args": ["--compile-commands-dir=build", "--fallback-style=Google"],
    },
    "angular": {
      "command": "ngserver",
      "args": [
        "--stdio",
        "--tsProbeLocations",
        "/Users/lekemula/.nvm/versions/node/v18.19.0/lib/node_modules/typescript/lib",
        "--ngProbeLocations",
        "/Users/lekemula/.nvm/versions/node/v18.19.0/lib/node_modules/@angular/language-server/node_modules/@angular/language-service"
      ],
      "filetypes": [ "ts", "typescript", "html", "typescriptreact", "typescript.tsx" ],
      "rootPatterns": ["angular.json", "nx.json"],
      "trace.server.verbosity": "verbose"
    },
    "stimulus": {
      "command": "stimulus-language-server",
      "args": ["--stdio"],
      "filetypes": ["html", "ruby", "eruby", "blade", "php"]
    },
		"terraform": {
			"command": "terraform-ls",
			"args": ["serve"],
			"filetypes": [
				"terraform",
				"tf"
			],
			"initializationOptions": {},
			"settings": {}
		},
    "helm": {
      "command": "helm_ls",
      "args": ["serve"],
      "filetypes": ["helm", "helmfile"],
      "rootPatterns": ["Chart.yaml"],
      "settings": {
        "helm-ls": {
          "yamlls": {
            "path": "yaml-language-server"
          }
        }
      }
    }
  },
  "snippets.ultisnips.pythonPrompt": false,
  "yaml.enable": true,
  "yaml.completion": true,
  "yaml.format.enable": true,
  "yaml.schemas": {
    "https://raw.githubusercontent.com/microsoft/azure-pipelines-vscode/main/service-schema.json": ["**/.azure/**/*.yaml"]
  }
}
