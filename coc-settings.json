{
  "codeLens.enable": true,
  "solargraph.completion": true,
  "html.format.templating": true,
  "coc.preferences.formatOnType": true,
  "languageserver": {
    "ruby-lsp": {
      "command": "bundle",
      "args": ["exec", "ruby-lsp"],
      "initializationOptions": {
        "enabledFeatures": [
          "codeActions",
          "diagnostics",
          "documentHighlights",
          "documentLink",
          "documentSymbols",
          "foldingRanges",
          "formatting",
          "hover",
          "inlayHint",
          "selectionRanges"
        ],
        "formatter": "auto"
      },
      "filetypes": ["ruby"]
    },
    "sorbet": {
      "command": "bundle",
      "args": ["exec", "srb","typecheck", "--lsp"],
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    },
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "clangd": {
      "command": "clangd",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".clangd", "compile_commands.json", ".git/", ".hg/"],
      "args": ["--compile-commands-dir=build", "--fallback-style=Google"]
    }
  }
}
